{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Ustawiamy transformację JSX dla React Native / Expo
    "jsx": "react-jsx",
    // Twoje istniejące opcje
    "types": [
      "jest",
      "node"
    ],
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}